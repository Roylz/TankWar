import java.awt.*;
import java.util.List;
import java.util.ArrayList;

public class Missile {
	private static final int XSPEED = 10;
	private static final int YSPEED = 10;
	public static final int WIDTH = 5;
	public static final int HEIGHT = 5;

	TankWar tw = new TankWar();
	private boolean mLive = true;

	int x, y;
	Tank.Direction dir;

	public Missile(int x, int y, Tank.Direction dir) {
		this.x = x;
		this.y = y;
		this.dir = dir;
	}

	public Missile(int x, int y, Tank.Direction dir, TankWar tw) {
		this(x, y, dir);
		this.tw = tw;
	}

	public void generateMissle(Graphics g) {
		if (mLive == true) {
			Color c = g.getColor();
			g.setColor(Color.BLACK);
			g.fillOval(x, y, WIDTH, HEIGHT);
			g.setColor(c);
			missileMove();
		} else
			tw.missiles.remove(this);
	}

	private void missileMove() {
		switch (dir) {
		case U:
			y -= YSPEED;
			break;
		case UR:
			y -= YSPEED;
			x += XSPEED;
			break;
		case R:
			x += XSPEED;
			break;
		case DR:
			y += YSPEED;
			x += XSPEED;
			break;
		case D:
			y += YSPEED;
			break;
		case DL:
			y += YSPEED;
			x -= XSPEED;
			break;
		case L:
			x -= YSPEED;
			break;
		case UL:
			y -= YSPEED;
			x -= XSPEED;
			break;
		}

		if (x < 0 || y < 0 || x > TankWar.GAME_WIDTH || y > TankWar.GAME_HEIGHT) {
			mLive = false;
		}

	}

	public Rectangle getMissileRect() {
		return new Rectangle(x, y, WIDTH, HEIGHT);
	}

	public boolean hitTank(Tank t) {
		if (getMissileRect().intersects(t.getTankRect()) && t.isAlive()) {
			t.setAlive(false);
			mLive = false;
			tw.explos.add(new Explosion(x, y, this.tw));
			return true;
		}

		return false;
	}

	public boolean hitTanks(List tanks) {
		for (int i = 0; i < tanks.size(); i++) {
			if (hitTank(tw.tanks.get(i)))
				return true;
		}
		return false;
	}

}
